	LABEL "@BRIAN_NAME@" ID 0x2003 AT (CENTER 25) FONT 1
	LABEL "@BRIAN_MAIL@" ID 0x2004 AT (CENTER 35) FONT 0

	LABEL "vt100 core by Dan Marks" ID 0x2005 AT (CENTER 55) FONT 1
