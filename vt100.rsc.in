	LABEL "many enhancements by" ID 0x2008 AT (CENTER 85) FONT 1
	LABEL "@VASSILII_NAME@" ID 0x2009 AT (CENTER 95) FONT 1
	LABEL "@VASSILII_MAIL@" ID 0x2010 AT (CENTER 105) FONT 0

	LABEL "http://vt100.tarunz.org/" ID 0x2011 AT (CENTER 125) FONT 1
	BUTTON "Ok" ID 0x2020 AT (CENTER 140 AUTO AUTO) FONT 0
